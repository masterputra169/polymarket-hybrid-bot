# ğŸ’° STRATEGY 1: PAIR TRADING (gabagool22's approach)
# Active during: 0-14 minutes of market
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

# Maximum pair cost to enter trade (YES avg + NO avg must be below this)
# Lower = safer but fewer opportunities
# Range: 0.90 - 0.99 | Recommended: 0.98
TARGET_PAIR_COST=0.98

# Size of each individual order in USD
# Bot places multiple small orders for better price averaging
# Range: 0.50 - 1.00 | Recommended: 0.75
ORDER_SIZE_USD=0.75

# Minimum single order size (safety limit)
MIN_ORDER_SIZE=0.50

# Maximum single order size (safety limit)
MAX_ORDER_SIZE=1.00

# Maximum total to spend on each side (YES or NO)
# Total exposure = MAX_PER_SIDE Ã— 2
# Conservative: 5.0 ($10 total) | Moderate: 10.0 ($20 total) | Aggressive: 20.0 ($40 total)
MAX_PER_SIDE=5.0

# Maximum imbalance between YES and NO positions
# Keeps positions balanced (0.20 = max 20% difference)
# Range: 0.10 - 0.30 | Recommended: 0.20
MAX_IMBALANCE=0.20

# How often to check prices (in seconds)
# Lower = faster response but more API calls
# Range: 3 - 10 | Recommended: 5
POLLING_INTERVAL=5

# Maximum daily loss before stopping trading
# Safety feature to prevent large losses
# Recommended: 50.0 - 100.0
MAX_DAILY_LOSS=50.0


